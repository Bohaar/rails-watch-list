<div class="container">
  <div class = "row">
    <div class="col-12 col-md-6 offset-lg-3">
      <h2>Create a new list</h2>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: 'Action' %>
          <%= f.submit "Submit", class: 'btn btn-flat' %>
        <% end %>
    </div>
  </div>
</div>
